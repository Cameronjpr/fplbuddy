package components

import (
	"fmt"
	"github.com/cameronjpr/fplbuddy/core"
	"github.com/cameronjpr/fplbuddy/shared"
	"strconv"
	"time"
)

templ layout() {
	<html>
		<head>
			<meta lang="en"/>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<meta name="color-scheme" content="light dark"/>
			<link rel="stylesheet" href="/assets/styles.css"/>
			<title>FPL Buddy</title>
			<script src="https://unpkg.com/htmx.org@1.9.2" integrity="sha384-L6OqL9pRWyyFU3+/bjdSri+iIphTN/bvYyM37tICVyOJkWZLpP2vGn6VUEXgzg6h" crossorigin="anonymous"></script>
		</head>
		<body class="m-auto max-w-4xl p-4 bg-zinc-950 text-zinc-100">
			<header>
				<nav class="flex flex-col sm:flex-row gap-4 justify-between items-center">
					<div class="flex flex-col sm:flex-row gap-2 items-center justify-between w-full">
						<ul>
							<li>
								<a href="/" class="hero">ğŸ› ï¸ FPL Buddy</a>
							</li>
						</ul>
						<ul class="flex gap-4">
							<li>
								<a href="/players">Players</a>
							</li>
							<li>
								<a class="disabled" disabled href="/team">Team </a>
							</li>
							<li>
								<a class="disabled" disabled href="/rank">Rank</a>
							</li>
							<li>
								<a href="/fdr">FDR</a>
							</li>
						</ul>
					</div>
					<div class="flex justify-center sm:justify-end w-full">
						@PlayerSearchBar([]core.Player{})
					</div>
				</nav>
			</header>
			<main
				id="main"
				class="flex flex-col gap-4 pt-4"
			>
				{ children... }
			</main>
		</body>
	</html>
}

templ HomePage(homepageData core.HomepageResponse) {
	@layout() {
		<div class="flex flex-col gap-4">
			<h2>Players</h2>
			<a href="/players" class="text-sm">View all players</a>
			<div class="flex overflow-scroll gap-2 bg-zinc-900 rounded-md p-2 px-4">
				<button class="text-lg" hx-get="/players/trending" hx-target="#main" hx-swap="outerHTML">ğŸ”¥ Trending</button>
				<button class="text-lg" hx-get="/players/risers" hx-target="#main" hx-swap="outerHTML">â¬† Risers</button>
				<button class="text-lg" hx-get="/players/fallers" hx-target="#main" hx-swap="outerHTML">â¬‡ Fallers</button>
				<button class="text-lg" hx-get="/players?position=1" hx-target="#main" hx-swap="outerHTML">ğŸ§¤ Goalkeepers</button>
				<button class="text-lg" hx-get="/players?position=2" hx-target="#main" hx-swap="outerHTML">ğŸ™… Defenders</button>
				<button class="text-lg" hx-get="/players?position=3" hx-target="#main" hx-swap="outerHTML">ğŸ¤ Midfielders</button>
				<button class="text-lg" hx-get="/players?position=4" hx-target="#main" hx-swap="outerHTML">ğŸ¯ Forwards</button>
			</div>
			@PlayerGrid(homepageData.TrendingPlayers)
			<h2>Fixtures</h2>
		</div>
	}
}

templ PlayersPage(playersResponse core.PlayersResponse, sortOptions map[string]string) {
	@layout() {
		<div class="flex flex-col gap-4">
			<nav class="flex gap-2 items-center justify-between w-full">
				<div class="flex flex-col sm:flex-row gap-4 items-center w-full">
					<input
						type="text"
						name="search"
						class="w-full sm:w-72"
						placeholder="Search players..."
						hx-post="/players"
						hx-trigger="input changed delay:500ms, keyup[key=='Enter']"
						hx-target="#players-table"
						hx-indicator=".htmx-indicator"
						minlength="3"
					/>
					<select class="hidden sm:block" name="club" hx-get="/players?club={value}" hx-target="#players-table">
						<option value="">All</option>
						for id, name := range shared.ClubNames {
							<option value={ strconv.Itoa(id) }>{ name }</option>
						}
					</select>
				</div>
				<button class="bg-blue-500 hover:bg-blue-600 text-white rounded-md px-4 py-2" hx-post="/comparison" hx-include="input[type='checkbox']:checked" hx-swap="transition:true">Compare</button>
			</nav>
			@PlayersTable(playersResponse, sortOptions)
		</div>
	}
}

templ ComparisonPage(players []core.Player) {
	@layout() {
		<div>
			<h1>Comparison</h1>
			<div class="flex flex-col sm:flex-row overflow-scroll gap-4">
				for _, p := range players {
					@PlayerGridCard(p)
				}
			</div>
		</div>
	}
}

templ EntryPage(entry core.Entry) {
	@layout() {
		<div>
			@TeamEntry(entry)
		</div>
	}
}

templ PlayerPage(p core.Player, fdr []core.FDREntry) {
	@layout() {
		<div class="flex flex-col gap-4">
			<h1>{ p.Name }</h1>
			<div class="flex gap-8">
				<div class="w-24">
					<img src={ fmt.Sprintf("/static/images/shirts/%s.webp", shared.GetCodeFromClubId(p.ClubId)) } width="96" height="96"/>
				</div>
				@FDRSchedule(fdr)
			</div>
			<p>Last updated at { p.UpdatedAt.Format(time.RFC822) } </p>
		</div>
	}
}

templ FDRPage(fdr []core.FDREntry) {
	@layout() {
		<div>
			<h1>Fixture Difficulty Rating</h1>
			@FDRSchedule(fdr)
		</div>
	}
}

templ NotFoundPage() {
	@layout() {
		<div>
			<h1>404 - Page Not Found</h1>
		</div>
	}
}
